---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Servicios" sideBarActiveItemID="services">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Servicios</div>
  </div>

  <HorizontalCard
    title="Developer Web FullStack"
    img="/jsfullstack.png"
    desc="Desarrollo Web FullStack en entorno Javascipt, Con Node, Express, SQL, React."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Wordpress Developer"
    img="/wordpressdev.jpeg"
    desc="Desarrollo Web con Wordpress, trabajando con Elementor, Woocommerce, Solido manejo de Html, Css, PHP, SQL."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Editor Audiovisual"
    img="/adobeeditor.jpeg"
    desc="Edicion de Video, trabajando con paquete Adobe, Premier Pro, After Effect, Photoshop, Etc."
    url="#"
  />
</BaseLayout>
